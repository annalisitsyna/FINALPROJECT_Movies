<Window x:Class="List_of_movies.CheckW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение"  Height="100" Width="280" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Name="LB" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="5,0"/>
        <DockPanel Grid.Row="1" LastChildFill="False" >
            <Button Name="YesB" Content=" ДА " MinWidth="100" Margin="10,5" DockPanel.Dock="Left" Click="YesB_Click" IsDefault="True" />
            <Button Name="NoB" Content=" НЕТ " MinWidth="100" Margin="10,5" DockPanel.Dock="Right" Click="NoB_Click" IsCancel="True" />
        </DockPanel>
    </Grid>
</Window>
